{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "env": {
                "MY_VAR": "${workspaceFolder}",
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Run Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/src/ui/streamlit.py"
            ],
            "console": "integratedTerminal",
            "envFile": ""
        }
        
    ]
}